{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext"
    ],
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*.ts"
  ]
}